<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.daemonz.controller.MainController">
    <left>
        <VBox fx:id="navBar" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <ToggleButton fx:id="homeBtn" mnemonicParsing="false" text="Home"/>
                <ToggleButton fx:id="analyzeBtn" mnemonicParsing="false" text="Analyze"/>
                <ToggleButton fx:id="botseBtn" mnemonicParsing="false" text="Bots"/>
                <ToggleButton fx:id="logsBtn" mnemonicParsing="false" text="Logs"/>
            </children>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentHost" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </BorderPane.margin>
        </StackPane>
    </center>
    <bottom>
        <HBox fx:id="statusBar" prefHeight="26.0" prefWidth="600.0" spacing="12.0">
            <Label fx:id="lblFeed" text="Feed: --"/>
            <Label fx:id="lblLastCandle" text="Last candle: --"/>
            <Label fx:id="lblRunner" text="Runner: --"/>
            <Region prefHeight="18.0" prefWidth="386.0" HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblErrors" text="Errors: 0"/>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
